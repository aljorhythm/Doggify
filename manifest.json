{
  "manifest_version": 2,

  "name": "Doggify",
  "description": "Doggit",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
          "http://*.facebook.com/*",
          "https://*.facebook.com/*",
          "https://*.wikipedia.org/*",
          "http://localhost:8888/temp.html",
          "https://www.instagram.com/*"
      ],
      "js": ["js/jquery.js", "js/cognition.js", "index.js"]
    }
  ],
  "web_accessible_resources": ["img/overlays/*.png"],
  "permissions": [
    "tabs", "webRequest", "webRequestBlocking", "http://*/*", "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' https://westus.api.cognitive.microsoft.com; object-src 'self'"
}
